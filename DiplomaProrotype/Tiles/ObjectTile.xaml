<UserControl x:Class="DiplomaProrotype.ObjectTile"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DiplomaProrotype"
             mc:Ignorable="d" 
             Height="70" Width="75" Margin="10,10,0,10" VerticalAlignment="Center" HorizontalAlignment="Center">
    <Border>
        <Grid>
            <Image Name="ObjectImage" Source="{Binding Image}" Height="50" Width="50" Stretch="Uniform" VerticalAlignment="Top"/>
            <ProgressBar Name="ObjectProgress" Height="5" Minimum="0" Maximum="100" VerticalAlignment="Bottom" Visibility="Hidden"/>
            <TextBlock Name="ObjectText" Text="{Binding Text}" VerticalAlignment="Bottom" FontSize="11" TextAlignment="Center"/>
            <TextBlock Name="ObjectId" Text="{Binding Id}"  VerticalAlignment="Bottom" FontSize="11" TextAlignment="Center" Visibility="Hidden"/>

        </Grid>
    </Border>
</UserControl>