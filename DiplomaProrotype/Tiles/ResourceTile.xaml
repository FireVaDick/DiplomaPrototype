<UserControl x:Class="DiplomaProrotype.ResourceTile"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DiplomaProrotype"
             mc:Ignorable="d" 
             Height="70" Width="70" Margin="10,10,0,10" VerticalAlignment="Center" HorizontalAlignment="Center">
    <Border>
        <Grid>
            <Rectangle Name="ResourceFigure" Fill="White" StrokeThickness="2" Stroke="Black" Width="30" Height="45" RadiusX="5" RadiusY="5" Margin="5" VerticalAlignment="Top"/>
            <TextBlock Name="ResourceText" Text="{Binding Text}" VerticalAlignment="Bottom" FontSize="11" TextAlignment="Center"/>
            <TextBlock Name="ResourceId" Text="{Binding Id}"  VerticalAlignment="Bottom" FontSize="11" TextAlignment="Center" Visibility="Hidden"/>
        </Grid>
    </Border>
</UserControl>