<UserControl x:Class="DiplomaProrotype.ModeTile"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DiplomaProrotype"
             mc:Ignorable="d" 
             Height="70" Width="75" Margin="10,10,10,0" VerticalAlignment="Center" HorizontalAlignment="Center">
    <Border>
        <Grid>
            <Image Name="ModeImage" Source="{Binding Image}" Height="50" Width="50" Stretch="Uniform" VerticalAlignment="Top"/>
            <TextBlock Name="ModeText" Text="{Binding Text}" VerticalAlignment="Bottom" FontSize="11" TextAlignment="Center"/>
        </Grid>
    </Border>
</UserControl>