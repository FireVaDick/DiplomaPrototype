<UserControl x:Class="DiplomaProrotype.MovableTile"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DiplomaProrotype"
             mc:Ignorable="d" 
             Height="70" Width="75" Margin="10,10,0,10" VerticalAlignment="Center" HorizontalAlignment="Center">
    <Border>
        <Grid>
            <Ellipse Name="MovableIndicator" Fill="White" StrokeThickness="2" Stroke="Black" Width="20" Height="20" VerticalAlignment="Top" Visibility="Hidden"/>
            <Image Name="MovableImage" Source="{Binding Image}" Height="50" Width="50" Stretch="Uniform" VerticalAlignment="Top"/>
            <TextBlock Name="MovableText" Text="{Binding Text}" VerticalAlignment="Bottom" FontSize="11" TextAlignment="Center"/>
            <TextBlock Name="MovableId" Text="{Binding Id}"  VerticalAlignment="Bottom" FontSize="11" TextAlignment="Center" Visibility="Hidden"/>
        </Grid>
    </Border>
</UserControl>